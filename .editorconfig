root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{vue,js,ts,scss,css,html,yml,yaml,json,md}]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
